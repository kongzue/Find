<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="65dp"
        android:id="@+id/img_main_list_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="值"
        android:id="@+id/item_main_listview_value"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="13dp"
        android:layout_marginRight="15dp"
        android:textColor="#8e000000" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置项"
            android:id="@+id/item_main_listview_title_textTitle"
            android:textSize="17dp"
            android:textColor="#000000"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示文字"
            android:id="@+id/item_main_listview_title_textTip"
            android:textSize="13dp"
            android:textColor="#46000000"
            android:layout_below="@+id/item_main_listview_title_textTitle"
            android:layout_alignLeft="@+id/item_main_listview_title_textTitle"
            android:layout_alignStart="@+id/item_main_listview_title_textTitle"
            android:layout_marginTop="-4dp"
            android:layout_marginBottom="2dp" />
    </RelativeLayout>
</RelativeLayout>