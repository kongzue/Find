<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kongzue.find.AboutActivity">

    <LinearLayout
        android:id="@+id/sys_statusBar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="#e1e0c1"
        android:visibility="gone">
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_about_bkg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/img_main_bkg_sign" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sys_statusBar"
        android:layout_centerHorizontal="true"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:id="@+id/txt_about_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            android:textSize="24dp"
            android:layout_marginLeft="35dp"
            android:textColor="#2c3b52"
            android:visibility="gone" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/img_about_back_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/img_normal_back_button"
            android:layout_marginTop="7dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_about_titleImg"
            android:layout_below="@+id/img_about_back_button"
            android:src="@drawable/img_about_bkg"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="140dp"
            android:layout_marginTop="-10dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="我们只做好用的产品\n点击查看我们更多的作品"
            android:id="@+id/txt_about_tip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#dae9fa"
            android:gravity="center"
            android:textSize="12dp" />

    </RelativeLayout>

</RelativeLayout>
