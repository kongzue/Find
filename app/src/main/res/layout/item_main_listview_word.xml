<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="56dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#18000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="55dp"
        android:id="@+id/img_main_list_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:layout_marginTop="12dp"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:id="@+id/item_main_listview_title_textTitle_sharp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示文字"
        android:id="@+id/item_main_listview_title_textTip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="13dp"
        android:layout_marginRight="15dp"
        android:textColor="#46000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="词汇"
        android:id="@+id/item_main_listview_title_textTitle"
        android:textSize="18dp"
        android:textColor="#000000"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_alignTop="@+id/item_main_listview_title_textTitle_sharp"
        android:layout_toRightOf="@+id/item_main_listview_title_textTitle_sharp"
        android:layout_toEndOf="@+id/item_main_listview_title_textTitle_sharp"
        android:singleLine="true" />
</RelativeLayout>